<div class="table table-auto lg:table-fixed w-full">
  <div class="table-header-group">
    <div class="table-row bg-blue-100">
      <% display_columns.each do |column_info| %>
        <div class="table-cell px-1 py-2 lg:px-2 lg:py-4 text-left font-bold inline">
          <%= sort_link(column_info[:label].titleize, column_info[:column]) %>
       </div>
      <% end %>

      <% if !defined?(allow_delete) || allow_delete %>
      <div class="table-cell x-1 py-2 lg:px-2 lg:py-4  text-transparent">DELETE</div>
      <% end %>

    </div>
  </div>

  <div class="table-row-group">
    <%= turbo_frame_tag "new_entry", class: "contents" %>
    <%= render records %>
  </div>

</div>
