<div class="w-full">

  <%# if notice.present? %>
    <div id="flash" class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></div>
  <%# end %>

  <% content_for :title do %>
    Categories
  <% end %>
  <div class="flex justify-between items-center">
    <h3 class="font-bold text-4xl">Categories</h3>
  </div>
  <%#= turbo_frame_tag "flash"  do %>
  <%# end %>
  </br>

  <%= turbo_frame_tag "new_btn" do %>
    <%= link_to 'New', new_category_path, data: {turbo_frame: "new_category"}, class: "btn-small text-right" %>
  <% end %>

  <%= render partial: "table", :locals => {categories: @categories, pagy: @pagy}  %>
  <% content_for :right do %>
    <div>
       <%= render :partial => '/shared/filters', :locals => {model: Category} %>
    </div>
  <% end %>
</div>
