<div class="w-full">


  <% content_for :title do %>
    Categories
  <% end %>
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Categories</h1>
  </div>
  </br>

  <%= turbo_frame_tag "new_btn" do %>
    <%= link_to 'New', new_category_path, data: {turbo_frame: "new_category"}, class: "btn-small text-right" %>
  <% end %>

  <%= render partial: "table", :locals => {categories: @categories, pagy: @pagy}  %>
  <% content_for :right do %>
    <div>
       <%= render :partial => '/shared/filters', :locals => {model: Category} %>
    </div>
  <% end %>
</div>
