<%= turbo_frame_tag dom_id(account), class: "table-row even:bg-blue-100" do %>

  <%= render 'shared/edit_text_cell', model: 'account', id: account.id, field: 'bank', content: account.bank %>
  <%= render 'shared/edit_text_cell', model: 'account', id: account.id, field: 'name', content: account.name %>
  <%= render 'shared/edit_text_cell', model: 'account', id: account.id, field: 'number', content: account.number %>
  <%= render 'shared/edit_boolean_cell', model: 'account', id: account.id, field: 'has_checking', content: account.has_checking %>
  <%= render 'shared/edit_boolean_cell', model: 'account', id: account.id, field: 'in_menu', content: account.in_menu %>


  <div class="table-cell">
    <%= link_to 'Show', url_for(account), data: {turbo_frame: "_top"}, class: "btn-small"%>
  </div>

  <div class="table-cell">
   <%= link_to 'Delete', url_for(account), method: :delete,  data: {turbo_frame: "_top",  turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn-small" %>
  </div>
  <%= render partial: "shared/flash" %>
<% end %>
